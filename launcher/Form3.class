PUBLIC SUB app1_Click()

DIM nombre AS String
DIM ejecutar AS String
DIM icono AS String
DIM imagen AS String
DIM fondo AS String

nombre = "nombre=" & TextBox1.Text
ejecutar = "exec=" & TextBox2.text
icono = "icon=" & TextBox3.text

SHELL "sed -ie 's/nombre/" & nombre & "/g' ~/.launcher/.config"
SHELL "sed -ie 's/exec/" & ejecutar & "/g' ~/.launcher/.config"
SHELL "sed -ie 's/icon/" & icono & "/g' ~/.launcher/.config"

fondo = "~/.launcher/icono1.png"
imagen = FileChooser1.SelectedPath 

SHELL "cp " & imagen & " ~/.launcher/icono1.png" 
SHELL "cp " & imagen & " ~/.launcher"
SHELL "cp ~/.launcher/icono1.png  ~/.launcher/icono1.png"


END

